    <!-- parcels.ejs -->

    <!-- parcels.ejs -->

    <h2>All Parcels</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% parcels.forEach(parcel => { %>
      <div class="bg-white rounded-lg shadow-md p-4">
        <p class="text-gray-700">
          <strong>Parcel ID:</strong> <%= parcel._id %>
        </p>
        <p class="text-gray-700">
          <strong>Item Name:</strong> <%= parcel.itemName %>
        </p>
        <p class="text-gray-700"><strong>From:</strong> <%= parcel.from %></p>
        <p class="text-gray-700"><strong>To:</strong> <%= parcel.to %></p>
        <p class="text-gray-700">
          <strong>Receiver:</strong> <%= parcel.receiver %>
        </p>
        <p class="text-gray-700">
          <strong>Sender:</strong> <%= parcel.sender %>
        </p>
        <p class="text-gray-700">
          <strong>Current Location:</strong> <%= parcel.currentLocation %>
        </p>
        <p class="text-gray-700"><strong>Date:</strong> <%= parcel.date %></p>
        <p class="text-gray-700">
          <strong>Status:</strong> <%= parcel.status %>
        </p>
        <a
          href="/parcels/<%= parcel._id %>/edit"
          class="text-blue-600 hover:text-blue-700"
          >Edit</a
        >
        <form
          action="/parcels/<%= parcel._id %>/delete"
          method="post"
          onsubmit="return confirm('Are you sure you want to delete this parcel?');"
        >
          <button type="submit" class="text-red-600 hover:text-red-700">
            Delete
          </button>
        </form>
      </div>
      <% }) %>
    </div>

    <footer class="bg-gray-900 text-gray-300 py-6">
      <div class="container mx-auto">
        <div class="text-sm">
          <p class="text-center">
            &copy; 2023 Your Company. All rights reserved.
          </p>
          <p class="text-center">
            Designed and developed with
            <span class="text-red-500">&hearts;</span> Everglory
          </p>
        </div>
      </div>
    </footer>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
  </body>
